{
    "rewrites": [
        {
            "source": "/api/v1/:path*",
            "destination": "https://your-backend-url.railway.app/api/v1/:path*"
        },
        {
            "source": "/ws/:path*",
            "destination": "https://your-backend-url.railway.app/ws/:path*"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "origin-when-cross-origin"
                }
            ]
        }
    ]
}